<body id="body">
    <div id="sky" class="text-center">
        <h1>Sound One Line Diary</h1>
        <p>Hello, <%= current_user.username %>! </p>
    </div>

    <div id="landscape" class="container">




        <!-- イベント -->

        <div id="events">
            <!-- ラジオボタン -->
            <h2>Events</h2>
            <input type="radio" name="events" value="hanabi" onclick="getEvents('events'); hanabi(); start()">花火
            <input type="radio" name="events" value="camp" onclick="getEvents('events'); camp(); start()">キャンプ
            <input type="radio" name="events" value="sea" onclick="getEvents('events'); sea(); start()">海　

        </div>




        <!-- 人 -->

        <div id="person">
            <!-- ラジオボタン -->
            <h2>Person</h2>
            <input type="radio" name="person" value="family" onclick="getPerson('person'); add_person()">家族
